        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-body form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                    @Html.DisplayFor(model => model.Username, new { @class = "control-label col-md-10" })
                    @Html.HiddenFor(model => model.Username, null)
                </div>
                <div class="form-group">
                    @Html.Label("Roles", new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @foreach (var r in ViewBag.Roles)
                        {
                            <div class="checkbox col-md-2">
                                @if (ViewBag.Selected.ToString().Contains(r.Id))
                                {
                                    <input type="checkbox" name="role" value="@r.Id" checked />
                                }
                                else
                                {
                                    <input type="checkbox" name="role" value="@r.Id" />
                                }
                                @Html.Label((string)r.Name, new { @for = (string)r.Id })
                            </div>
                        }
                    </div>
                </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div><!-- /.box-footer -->
                }

            </div><!-- /.box -->
    </section><!-- /.content -->


